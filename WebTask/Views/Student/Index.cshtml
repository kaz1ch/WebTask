@model IEnumerable<Student>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Last Name</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>
                        <a asp-controller="Student"
                        asp-action="Details"
                        asp-route-id="@student.Id">
                            @student.LastName
                        </a>
                    </td>
                    <td>@student.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>